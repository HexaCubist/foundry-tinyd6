<{{#if tagName}}{{tagName}}{{^}}li{{/if}} class="{{classes}} actor-item" data-item-id="{{gearItem._id}}">
<div class="d-flex justify-content-between">
    <img src="{{gearItem.img}}" title="{{gearItem.name}}" width="24" height="24" class="align-middle mr-2"/>
    <h4 class="mr-auto">
        <a class="item-show d-inline-block h-100">{{gearItem.name}}</a>
    </h4>
    {{#if (eq gearItem.type "weapon")}}
        <a class="item-control item-equip ml-2 {{#if gearItem.system.equipped}}equipped{{/if}}" data-field="system.equipped" title="{{localize "tinyd6.actor.actions.equipTrait"}}">
            <span class="fas fa-tshirt"></span>
        </a>
    {{/if}}
    {{#if (eq gearItem.type "armor")}}
        <a class="item-control item-equip ml-2 {{#if gearItem.system.equipped}}equipped{{/if}}" data-field="system.equipped" title="{{localize "tinyd6.actor.actions.equipTrait"}}">
            <span class="fas fa-tshirt"></span>
        </a>
    {{/if}}
    <a class="item-control item-delete ml-2" title="{{localize "tinyd6.actor.actions.deleteTrait"}}"><i class="fas fa-times"></i></a>
</div>
</{{#if tagName}}{{tagName}}{{^}}li{{/if}}>
