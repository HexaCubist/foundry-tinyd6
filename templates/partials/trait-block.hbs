<li class="actor-item" data-item-id="{{_id}}">
    <div class="d-flex">
        <img src="{{img}}" title="{{name}}" width="24" height="24" class="align-middle mr-2"/>
        <h4 class="item-name h-100 mr-auto">
            <a class="item-show d-inline-block h-100">{{name}}</a>
        </h4>
        <a class="item-control item-delete ml-2" title="{{localize "tinyd6.actor.actions.deleteTrait"}}"><i class="fas fa-times"></i></a>
    </div>
</li>
