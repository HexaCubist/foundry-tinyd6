<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'tinyd6.weapon.name'}}"/></h1>
    </header>
    <table>
        <tr>
            <th>{{localize 'tinyd6.weapon.type'}}</th>
            <th>{{localize 'tinyd6.weapon.damage'}}</th>
            <th>{{localize 'tinyd6.weapon.slots'}}</th>
        </tr>
        <tr>
            <td>
                <select name="data.damageType">
                    {{#select data.damageType}}
                        {{#each config.weaponTypes as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                    {{/select}}
                </select>
                <select name="data.group">
                    {{#select data.group}}
                        {{#each config.weaponCategories as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </td>
            <td>
                <input type="text" name="data.damage" value="{{data.damage}}" data-dtype="Number"/>
            </td>
            <td>
                <input type="text" name="data.slots" value="{{data.slots}}" data-dtype="Number"/>
            </td>
        </tr>
    </table>
    {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
</form>
